extends layout

block content
	section.container(style='margin-top:100px')
		section.hero-unit
			h1 Hello, welcome!
			p Please login to continue
			-if (typeof msg != 'undefined')
				p.alert.alert-error
					small
						strong(style='color:#666')=msg
			form(method='post',action='login', style='margin-top:60px')
				div.input
					input(name='username',type='text',style='font-size: 16px;color: black;padding: 0.8em 0.8em;width: 300px;box-shadow: inset 0 1px 1px #ddd;',placeholder='Username')
				div.input
					input(name='password',type='password',style='font-size: 16px;color: black;padding: 0.8em 0.8em;width: 300px;box-shadow: inset 0 1px 1px #ddd;',placeholder='Password')
				div.actions.clearfix
					input(value='Log in',type='submit',style='padding: 0.8em 3em;font-weight:bold;font-size:16px').btn.btn-primary
		section.footer
			p(style='text-align:center;color:#777') &copy; Allied Insurance
